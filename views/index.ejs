<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Layout</title>
    <!-- Include the Tailwind CSS stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="font-sans">

    <!-- Top Navigation Bar -->
    <nav class="bg-gray-900 p-4 text-white">
        <div class="container mx-auto">
            <ul class="flex">
                <li class="mr-6"><a href="#" class="hover:text-blue-500">Project Management App</a></li>
            </ul>
        </div>
    </nav>

    <div class="flex">
        <!-- Left Sidebar -->
        <div class="h-screen bg-gray-800 text-white p-4 w-1/6">
            <h1 class="text-xl font-bold mb-16">Planning</h1>
            <ul class="space-y-4 ml-10">
                <li><a href="/" class="text-blue-500">Home</a></li>
                <li><a href="/timeline" class="text-blue-500">Timeline</a></li>
                <li><a href="#" class="text-blue-500">Projects</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex flex-col items-center">
            <h1 class="text-3xl font-bold mt-10">Tasks</h1>

            <div class="flex-1 flex mt-10 ml-20">
                <div id="notStarted" class="w-96 h-3/4 p-4 bg-gray-200">
                    <h2 class="text-xl font-bold mb-4">Not Started</h2>
                    <% for(var i=0; i<globalTaskArray.length; i++) { %>
                        <% var task = globalTaskArray[i]; %>
                        <% if(task.status === "Not Started") { %>
                            <div>
                                <h2><%= task.name %></h2>
                                <p><%= task.description %></p>
                                <p><%= task.lastModified %></p>
                                <p><%= task.creator %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div id="inProgress" class="w-96 h-3/4 p-4 bg-gray-300">
                    <h2 class="text-xl font-bold mb-4">In Progress</h2>
                    <% for(var i=0; i<globalTaskArray.length; i++) { %>
                        <% var task = globalTaskArray[i]; %>
                        <% if(task.status === "In Progress") { %>
                            <div>
                                <h2><%= task.name %></h2>
                                <p><%= task.description %></p>
                                <p><%= task.lastModified %></p>
                                <p><%= task.creator %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div id="completed" class="w-96 h-3/4 p-4 bg-gray-400">
                    <h2 class="text-xl font-bold mb-4">Completed</h2>
                    <% for(var i=0; i<globalTaskArray.length; i++) { %>
                        <% var task = globalTaskArray[i]; %>
                        <% if(task.status === "Completed") { %>
                            <div>
                                <h2><%= task.name %></h2>
                                <p><%= task.description %></p>
                                <p><%= task.lastModified %></p>
                                <p><%= task.creator %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
